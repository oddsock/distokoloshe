ACME_EMAIL=admin@example.com

# ── LiveKit ─────────────────────────────────────────────
LIVEKIT_API_KEY=CHANGE_ME_run_scripts_init_sh
LIVEKIT_API_SECRET=CHANGE_ME_run_scripts_init_sh

# ── App Auth ────────────────────────────────────────────
JWT_SECRET=CHANGE_ME_run_scripts_init_sh
E2EE_SECRET=CHANGE_ME_run_scripts_init_sh

